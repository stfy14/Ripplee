<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Ripplee.ViewModels"
             xmlns:controls="clr-namespace:Ripplee.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Ripplee.Views.MainPage"
             BackgroundColor="#202020">
    
    <Grid RowDefinitions="Auto,*">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CloseMenuCommand}"/>
        </Grid.GestureRecognizers>
        
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*" ColumnDefinitions="*" BackgroundColor="Transparent">

            <Grid ZIndex="3" Margin="0,11,0,0">
                <Border BackgroundColor="#202020" 
                        StrokeShape="RoundRectangle 0,0,40,40"
                        Margin="15,-12,15,10"
                        Grid.Row="0"/>
                <Border BackgroundColor="#1B1B1B" 
                        StrokeShape="RoundRectangle 20,20,20,20"
                        Margin="20,-1,20,10"/>
                <Label Text="{Binding User.ChatSelection}" 
                       TextColor="White" 
                       HorizontalOptions="Start"
                       Margin="55,11,0,0" 
                       VerticalOptions="Start"
                       Grid.Row="0"/>
                <ImageButton x:Name="menuButton"
                             Source="menu_icon.svg"
                             Command="{Binding ToggleMenuCommand}"
                             HeightRequest="40"
                             WidthRequest="40"
                             HorizontalOptions="End"
                             VerticalOptions="Start"
                             Margin="0,9,30,20"
                             BackgroundColor="#131313"
                             CornerRadius="10"
                             Padding="5">
                </ImageButton>
            </Grid>

            <controls:MenuPanel x:Name="menuControl" Grid.RowSpan="2" ZIndex="2" BindingContext="{Binding .}"/>

            <Grid Grid.Row="1" Margin="0,60,0,50" ZIndex="1">
                <Ellipse WidthRequest="100" HeightRequest="100" Fill="Gray"/>
                <Label Text="{Binding User.Username}" TextColor="White" HorizontalOptions="Center" Margin="0,150,0,0"/>
            </Grid>

            <Border VerticalOptions="End" Grid.Row="2" BackgroundColor="#1B1B1B" StrokeShape="RoundRectangle 30,30,30,30" Margin="20,30,20,0">
                <ContentView>
                    <OnPlatform x:TypeArguments="View">
                        <On Platform="Android">
                            <controls:FilterControlsView Padding="30,30,30,20" />
                        </On>
                        <On Platform="UWP, WinUI">
                            <ScrollView>
                                <controls:FilterControlsView Padding="30,30,30,20"/>
                            </ScrollView>
                        </On>
                    </OnPlatform>
                </ContentView>
            </Border>
        </Grid>
    </Grid>
</ContentPage>