<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ripplee.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ripplee.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Ripplee"
    BackgroundColor="#202020">

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:OnboardingPage}"
        Route="OnboardingPage" />

    <!-- Основное содержимое приложения, которое будет доступно после входа -->
    <!-- Используем FlyoutItem или TabBar, чтобы сгруппировать страницы -->
    <FlyoutItem Route="MainApp">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    
</Shell>
